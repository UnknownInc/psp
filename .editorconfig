root = true

[*.js]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2